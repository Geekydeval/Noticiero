{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",

    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true,
    "strict": true,

    "baseUrl": "./src",
    "paths": {
      "@src/*": [ "*" ],
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
